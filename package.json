{
  "name": "Culture-and-Heritage",
  "private": true,
  "scripts": {
    "show-port": "netstat -aon | findstr :3001 & netstat -aon | findstr :3000 & netstat -aon | findstr :6379",
    "kill-port": "kill-port 3001 3000 6379",
    "build": "turbo run build",
    "dev": "kill-port 3000 3001 && turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "kill-port": "^2.0.1",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.525.0",
    "react-tsparticles": "^2.12.2",
    "tsparticles": "^3.8.1"
  }
}
